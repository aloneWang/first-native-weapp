.container {
	padding:10rpx 20rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
}
.container .movie_wrapper{
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	margin-bottom: 25rpx ;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	    -ms-flex-pack: justify;
	        justify-content: space-between;
}
.container .movie_wrapper .left_box{
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	width: 85%;
	-webkit-flex-basis: 85%;
	    -ms-flex-preferred-size: 85%;
	        flex-basis: 85%;
}
.container .movie_wrapper .movie_poster{
	margin-right: 20rpx;
}
.movie_poster image{
	width:160rpx;
	height:250rpx;
}
.movie_info{
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-orient:vertical;
	-webkit-box-direction:normal;
	-webkit-flex-flow:column nowrap;
	    -ms-flex-flow:column nowrap;
	        flex-flow:column nowrap;
	-webkit-justify-content: space-around;
	    -ms-flex-pack: distribute;
	        justify-content: space-around;
	font-size: 15px;
	width:60%;
	-webkit-flex-basis: 60%;
	    -ms-flex-preferred-size: 60%;
	        flex-basis: 60%;
}
.container .movie_wrapper .right_box{
	-webkit-box-flex: 1;
	-webkit-flex-grow: 1;
	    -ms-flex-positive: 1;
	        flex-grow: 1;
}
.movie_wrapper .online{
	padding:3px 5px;
	background: #ea1f1f9e;
	border-radius: 5px;
	text-align: center;
	color:#fff;
}
.movie_wrapper .not-online{
	font-size:24rpx;
	color:#999;
}
.bottomtitle{
	display: block;
	text-align: center;
	color:#999;
}
